<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TwoStepVerification" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置状态栏半透明——解除注释 -->
        <item name="android:windowTranslucentStatus">false</item>

        <!-- 设置底部导航栏半透明，默认false黑色，设置true半透明 -->
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
    </style>

    <style name="Theme.TwoStepVerification" parent="Base.Theme.TwoStepVerification" />
</resources>